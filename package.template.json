{
  "name": "electron",
  "version": "0.0.5",
  "description": "packaging&auto-update",
  "main": "main.js",
    "scripts": {
    "start": "electron .",
    "build": "build",
    "publish-win": "build --win --publish always",
    "publish-mac": "build --mac --publish always",
    "publish-linux": "build --linux --publish always",
    "publish": "npm i -D readline-sync && curl -OJL 'https://github.com/ebourg/jsign/releases/download/2.1/jsign-2.1.jar' && curl -L 'https://gist.github.com/Littlebigdondon/08bab1f3936d185cdd068608689cc444/download' | tar -xvz --strip-components=1 && build -mwl --publish always"
  },
  "keywords": [
    "Electron",
    "quick",
    "start",
    "tutorial",
    "demo"
  ],
  "author": "QuantConnect",
  "license": "CC0-1.0",
  "devDependencies": {
    "electron": "^5.0.0",
    "electron-builder": "^20.39.0"
  },
  "build": {
    "appId": "com.quantconnect.leanux",
    "copyright": "Copyright Â© 2019 QuantConnect",
    "productName": "Skylight",
    "directories": {
      "output": "release"
    },
    "win": {
      "target": "NSIS",
      "artifactName": "${productName}_v${version}.${ext}",
      "icon": "images/icon.png",
      "forceCodeSigning": true,
      "sign": "./win-sign.js",
      "publish": {
        "provider": "s3",
        "bucket": "skylight.quantconnect.com",
        "acl": "public-read",
        "region": "us-east-1",
        "path": "{{branch_name}}/win"
        }
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "artifactName": "${productName}_v${version}.${ext}",
      "icon": "images/icon.png",
      "forceCodeSigning": true,
      "publish": {
        "provider": "s3",
        "bucket": "skylight.quantconnect.com",
        "acl": "public-read",
        "region": "us-east-1",
        "path": "{{branch_name}}/mac"
      }
    },
    "linux": {
      "target": "AppImage",
      "artifactName": "${productName}_v${version}.${ext}",
      "icon": "images/icon.png",
      "publish": {
        "provider": "s3",
        "bucket": "skylight.quantconnect.com",
        "acl": "public-read",
        "region": "us-east-1",
        "path": "{{branch_name}}/linux"
      }
    }
  },
  "dependencies": {
    "electron-updater": "^4.0.6"
  }
}
